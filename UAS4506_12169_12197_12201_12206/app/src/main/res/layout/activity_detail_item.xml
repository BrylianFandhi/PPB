<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".detail_item">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/atas_masket"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/back"
            android:layout_width="39dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_action_search_back" />

        <TextView
            android:id="@+id/type_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Dota Item"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imagedt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/i_bh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Full Set Bounty Hunter"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintLeft_toRightOf="@+id/imagedt"
        app:layout_constraintStart_toEndOf="@+id/imagedt"
        app:layout_constraintTop_toTopOf="@+id/imagedt"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_bold"
        android:text="Rp. 500.000,00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintLeft_toRightOf="@+id/imagedt"
        app:layout_constraintStart_toEndOf="@+id/imagedt"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />


    <Button
        android:id="@+id/btn_beli"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:background="@drawable/atas_masket"
        android:text="Beli"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imagedt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintLeft_toRightOf="@+id/imagedt"
        app:layout_constraintStart_toEndOf="@+id/to_cart"
        app:layout_constraintTop_toBottomOf="@+id/harga"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/additem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/additem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagedt"
        app:layout_constraintTop_toTopOf="@+id/minusitem"
        tools:ignore="MissingConstraints">


    </ImageButton>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/additem"
        app:layout_constraintTop_toBottomOf="@+id/harga"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/minusitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/dropitekm"
        app:layout_constraintLeft_toRightOf="@+id/count"
        app:layout_constraintTop_toBottomOf="@+id/harga" />

    <ImageButton
        android:id="@+id/to_cart"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_add_shopping_cart_24"
        app:layout_constraintBottom_toBottomOf="@+id/btn_beli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toEndOf="@+id/imagedt"
        app:layout_constraintTop_toTopOf="@+id/btn_beli"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="384dp"
        android:layout_height="421dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Deskripsi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_beli"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintLeft_toLeftOf="@+id/imagedt"
        app:layout_constraintRight_toLeftOf="@+id/btn_beli"
        app:layout_constraintStart_toStartOf="@+id/imagedt"
        app:layout_constraintTop_toBottomOf="@+id/imagedt"
        app:layout_constraintVertical_bias="0.09" />


</androidx.constraintlayout.widget.ConstraintLayout>